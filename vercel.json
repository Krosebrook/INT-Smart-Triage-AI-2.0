{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/demo.html",
      "dest": "/public/demo.html",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "status": 404
    }
  ],
  
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  
  "env": {
    "NODE_ENV": "production"
  },
  
  "buildCommand": "echo 'No build step required for static files and serverless functions'",
  
  "regions": ["iad1", "sfo1"]
}