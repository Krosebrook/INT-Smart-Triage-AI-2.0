{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "api/**/*",
    "test/**/*",
    "vite.config.js",
    "index.html",
    "client-success-portal.html"
  ]
}
